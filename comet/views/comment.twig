<h3>{{ total_comments }} Comments:</h3>

{% if errors|default is not empty %}
<div class="cms-alert">
	{{ errors }}
</div>
{% endif %}

{% for comment in data %}
<article class="comment">

	<section class="comment-content">
		<header>
			<h4>
				{{ get_username(comment.poster_id) }} <br />
				<small>{{ cms_date(comment.date) }} - {{ cms_time(comment.date) }}</small>
			</h4>
			{% if comment.poster_id == user.user_id or is_admin == true %}
				<div><a class="pure-button pure-button-xsmall" href="{{ base_url() }}comments/delete/{{ comment.id }}">delete</a></div>
			{% endif %}
		</header>
		<p>{{ parse_markdown(comment.content) }}</p>
	</section>

</article>
{% endfor %}