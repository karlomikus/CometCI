<table width="100%">
  <thead>
    <tr>
      <th>Opponent</th>
      <th>Game</th>
      <th>Date</th>
      <th>Result</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
	{% for match in matches %}
		<tr>
	      <td>{{get_opponent_name(match.opponent)}}</td>
	      <td>{{get_game_name(match.game)}}</td>
	      <td>{{match.date}}</td>
	      <td>{{get_match_score(match.id)}}</td>
	      <td><a href="{{base_url()}}matches/show/{{match.id}}"><i class="icon-reorder"></i></a></td>
	    </tr>
	{% endfor %}
  </tbody>
</table>