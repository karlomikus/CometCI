{% if logged_in %}
	<a href="{{base_url()}}forums/newreply/{{original_post.id}}" class="pure-button">
		<i class="icon-plus"></i> Add reply
	</a>
	
	{% if is_mod %}
	<a href="{{base_url()}}forums/locktopic/{{original_post.id}}" class="pure-button">
		<i class="icon-lock"></i> Lock topic
	</a>

	<a href="{{base_url()}}forums/deletetopic/{{original_post.id}}" class="pure-button">
		<i class="icon-trash"></i> Delete topic
	</a>
	{% endif %}

	<hr />
{% endif %}

<div class="cms-forum-post panel">
	<div class="cms-forum-post-info">
		{{get_avatar(original_post.author, true)}}
		<div>
			<strong>{{get_username(original_post.author)}}</strong> <br /> {{original_post.date}}
		</div>
		<p>
			<a href="#"><i class="icon-edit"></i></a>
			<a href="#"><i class="icon-trash"></i></a>
			<a href="#"><i class="icon-exclamation-sign"></i></a>
		</p>
	</div>
	<div class="forum-post-content">
		{{parse_markdown(original_post.content)}}
	</div>
</div>

{% for post in data %}

	<div class="cms-forum-post panel">
		<div class="cms-forum-post-info">
			{{get_avatar(post.poster, true)}}
			<div>
				<strong>{{get_username(post.poster)}}</strong> <br /> {{post.date}}
			</div>
			<p>
				<a href="#"><i class="icon-edit"></i></a>
				<a href="#"><i class="icon-trash"></i></a>
				<a href="#"><i class="icon-exclamation-sign"></i></a>
			</p>
		</div>
		<div class="forum-post-content">
			{{parse_markdown(post.content)}}
		</div>
	</div>

{% endfor %}

{% if logged_in %}
	<a href="{{base_url()}}forums/newreply/{{original_post.id}}" class="pure-button"><i class="icon-plus"></i> Add reply</a>
{% endif %}