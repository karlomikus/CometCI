{% if login_alerts|length > 0 %}
	<div class="alert-box alert">{{login_alerts}}</div>
{% endif %}
{% if logged_in == false %}
	<form action="{{base_url()}}users/login" method="post">
		<input type="text" name="identity" />
		<input type="password" name="password" />
		<button class="small button" type="submit">Login</button>
		<a class="small button" href="{{base_url}}users/register">Register</a>
	</form>
{% else %}
	<ul class="square">
		<li>Welcome back: {{user.username}}</li>
		<li><a href="{{base_url()}}users/profile">Profile</a></li>
		<li><a href="{{base_url()}}admin" target="_blank">Control Panel</a></li> {# IF ADMIN SHOW THIS #}
		<li><a href="{{base_url()}}users/logout">Logout</a></li>
	</ul>
{% endif %}