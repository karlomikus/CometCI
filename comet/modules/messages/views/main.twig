<a href="{{ base_url() }}messages/index/sent" class="button cms-button">Sent</a>
<a href="{{ base_url() }}messages/" class="button cms-button">Received</a>
<a href="{{ base_url() }}messages/create" class="button cms-button">New</a>

<hr />

{% for msg in data %}

	<div class="private-message">
		
		<div class="private-message-header">
			<h4><i class="icon-envelope"></i> {{ msg.title }}</h4>
			<span>From {{ get_username(msg.from) }}, to {{ get_username(msg.to) }} on {{ cms_date(msg.date) }} - {{ cms_time(msg.date) }}</span>
		</div>
		
		<p>
			{{ msg.content }}
		</p>
	</div>
{% endfor %}