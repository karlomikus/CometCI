{% if posts|default is not empty %}

	{% for post in posts %}
		<div class="panel">
			<div class="pure-g">
				<div class="pure-u-1-3">
					<img src="{{ base_url() }}uploads/labels/{{ get_label_image(post.label) }}" alt="" />
					<br />
					Author: {{ get_username(post.author) }}
					<br />
					{{ count_comments('posts', post.id) }} Comments
				</div>
				<div class="pure-u-2-3">
					<h3 style="padding-top: 0px;"><a href="{{ base_url() }}post/{{ post.slug }}">{{ post.title }}</a> <br />
						<small>
							<time>{{ cms_date(post.date )}}</time>
							in {{ get_label_name(post.label) }}
						</small>
					</h3>
					<p>
						{{ post.teaser }}
					</p>
				</div>
			</div>
		</div>
	{% endfor %}

{% else %}
	No posts available.
{% endif %}

<div class="text-right">
	<a class="pure-button" href="{{ base_url() }}posts/archive">Posts archive</a>
</div>

{{ pagination }}